{
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "esnext",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts", "material.module.ts"],
	"exclude": ["node_modules", "src/types"]
}